{
    "containerDefinitions": [
        {
            "name": "app",
            "image": "114454670435.dkr.ecr.ap-south-1.amazonaws.com/zango-prod-base-project:latest",
            "cpu": 512,
            "memory": 1024,
            "portMappings": [
                {
                    "name": "app-8000-tcp",
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "static_volume",
                    "containerPath": "/zango/zango_project/static"
                },
                {
                    "sourceVolume": "media_volume",
                    "containerPath": "/zango/zango_project/media"
                },
                {
                    "sourceVolume": "app_volume",
                    "containerPath": "/zango/zango_project/workspaces"
                },
                {
                    "sourceVolume": "logs_volume",
                    "containerPath": "/zango/zango_project/logs"
                },
                {
                    "sourceVolume": "secrets_volume",
                    "containerPath": "/zango/secrets"
                }
            ],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "change-vol-ownership",
                    "condition": "SUCCESS"
                },
                {
                    "containerName": "fetch-secrets",
                    "condition": "SUCCESS"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "netstat -ltn | grep -q 8000"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "systemControls": []
        },
        {
            "name": "nginx",
            "image": "114454670435.dkr.ecr.ap-south-1.amazonaws.com/zango-prod-nginx:latest",
            "cpu": 256,
            "memory": 1024,
            "portMappings": [
                {
                    "name": "nginx-1443-tcp",
                    "containerPort": 1443,
                    "hostPort": 1443,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "links": ["app"],
            "mountPoints": [
                {
                    "sourceVolume": "static_volume",
                    "containerPath": "/zango/zango_project/static",
                    "readOnly": true
                },
                {
                    "sourceVolume": "media_volume",
                    "containerPath": "/zango/zango_project/media",
                    "readOnly": true
                }
            ],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "app",
                    "condition": "HEALTHY"
                },
                {
                    "containerName": "change-vol-ownership",
                    "condition": "SUCCESS"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "celery",
            "image": "114454670435.dkr.ecr.ap-south-1.amazonaws.com/zango-prod-base-project:latest",
            "cpu": 512,
            "memory": 1024,
            "portMappings": [],
            "essential": false,
            "entryPoint": [
                "/bin/bash",
                "-c",
                "cp /zango/secrets/.env /zango/.env && cd zango_project && celery -A zango_project worker -l info"
            ],
            "environment": [],
            "mountPoints": [
                {
                    "sourceVolume": "app_volume",
                    "containerPath": "/zango/zango_project/workspaces"
                },
                {
                    "sourceVolume": "logs_volume",
                    "containerPath": "/zango/zango_project/logs"
                },
                {
                    "sourceVolume": "secrets_volume",
                    "containerPath": "/zango/secrets"
                }
            ],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "app",
                    "condition": "HEALTHY"
                },
                {
                    "containerName": "change-vol-ownership",
                    "condition": "SUCCESS"
                },
                {
                    "containerName": "fetch-secrets",
                    "condition": "SUCCESS"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "celery-beat",
            "image": "114454670435.dkr.ecr.ap-south-1.amazonaws.com/zango-prod-base-project:latest",
            "cpu": 512,
            "memory": 1024,
            "portMappings": [],
            "essential": false,
            "entryPoint": [
                "/bin/bash",
                "-c",
                "cp /zango/secrets/.env /zango/.env && cd zango_project && SINGLE_BEAT_REDIS_SERVER=redis://${REDIS_HOST}:${REDIS_PORT}/1 single-beat celery -A zango_project beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler"
            ],
            "environment": [],
            "mountPoints": [
                {
                    "sourceVolume": "app_volume",
                    "containerPath": "/zango/zango_project/workspaces"
                },
                {
                    "sourceVolume": "logs_volume",
                    "containerPath": "/zango/zango_project/logs"
                },
                {
                    "sourceVolume": "secrets_volume",
                    "containerPath": "/zango/secrets"
                }
            ],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "app",
                    "condition": "HEALTHY"
                },
                {
                    "containerName": "celery",
                    "condition": "START"
                },
                {
                    "containerName": "change-vol-ownership",
                    "condition": "SUCCESS"
                },
                {
                    "containerName": "fetch-secrets",
                    "condition": "SUCCESS"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "change-vol-ownership",
            "image": "alpine:3.22.1",
            "cpu": 128,
            "memory": 256,
            "portMappings": [],
            "essential": false,
            "entryPoint": [
                "chown",
                "-R",
                "2048:2048",
                "/tmp/change-app-ownership",
                "/tmp/change-static-ownership",
                "/tmp/change-media-ownership",
                "/tmp/change-logs-ownership"
            ],
            "environment": [],
            "mountPoints": [
                {
                    "sourceVolume": "app_volume",
                    "containerPath": "/tmp/change-app-ownership"
                },
                {
                    "sourceVolume": "static_volume",
                    "containerPath": "/tmp/change-static-ownership"
                },
                {
                    "sourceVolume": "media_volume",
                    "containerPath": "/tmp/change-media-ownership"
                },
                {
                    "sourceVolume": "logs_volume",
                    "containerPath": "/tmp/change-logs-ownership"
                }
            ],
            "volumesFrom": [],
            "user": "0:2048",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "fetch-secrets",
            "image": "amazon/aws-cli",
            "cpu": 128,
            "memory": 256,
            "portMappings": [],
            "essential": false,
            "entryPoint": [
                "sh",
                "-c",
                "aws --region ap-south-1 secretsmanager get-secret-value --secret-id zango-test-secret --query SecretString --output text > /zango/secrets/.env"
            ],
            "environment": [],
            "mountPoints": [
                {
                    "sourceVolume": "secrets_volume",
                    "containerPath": "/zango/secrets"
                }
            ],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "/ecs/zango",
                    "awslogs-region": "ap-south-1"
                },
                "secretOptions": []
            },
            "systemControls": []
        }
    ],
    "family": "zango",
    "taskRoleArn": "arn:aws:iam::114454670435:role/zango-ecs-task-role",
    "executionRoleArn": "arn:aws:iam::114454670435:role/zango-ecs-task-execution-role",
    "networkMode": "bridge",
    "volumes": [
        {
            "name": "app_volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true,
                "driver": "local"
            }
        },
        {
            "name": "static_volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true,
                "driver": "local"
            }
        },
        {
            "name": "media_volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true,
                "driver": "local"
            }
        },
        {
            "name": "logs_volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true,
                "driver": "local"
            }
        },
        {
            "name": "secrets_volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true,
                "driver": "local"
            }
        }
    ],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "EC2"
    ],
    "tags": [
        {
            "key": "Environment",
            "value": "production"
        },
        {
            "key": "Application",
            "value": "zango"
        }
    ]
}
